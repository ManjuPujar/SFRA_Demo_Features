<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19">

	<field 
		formid="firstname" 
		label="label.input.firstname.profile" 
		type="string" 
		mandatory="true" 
		binding="firstName"
        max-length="50" 
        missing-error="address.firstname.missing" 
        range-error="error.message.50orless"/>
                       
    <field 
		formid="lastname" 
		label="label.input.lastname.profile" 
		type="string" 
		mandatory="true" 
		binding="lastName" 
		max-length="50"
        missing-error="address.lastname.missing" 
        range-error="error.message.50orless"/>
            
    <field
		formid="email" 
		label="label.input.emailAdddress.profile" 
		mandatory="true" 
		max-length="50" 
		missing-error="error.message.required"
		parse-error="error.message.parse.email.profile.form"
		range-error="error.message.50orless"
		regexp="^[\w.%+-]+@[\w.-]+\.[\w]{2,6}$" 
		value-error="ValueErrorText"
		type="string"/>   
	
	<field 
		formid="productID" 
		label="label.input.productID.profile" 
		type="string" 
		mandatory="true" 
		binding="productID"
        max-length="50" 
        missing-error="address.firstname.missing" 
        range-error="error.message.50orless"/>	            
</form>   

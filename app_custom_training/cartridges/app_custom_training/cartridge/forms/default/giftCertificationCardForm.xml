<?xml version="1.0"?>
<form xmlns="http://www.demandware.com/xml/form/2008-04-19" secure="false">
	<field
		formid="yourname"
		label="gift.certification.your.name"
		mandatory="true"
		max-length="50"
		missing-error="error.message.required"
		range-error="error.message.50orless"
		type="string"
	/>
	<field
		formid="friendsname"
		label="gift.certification.friends.name"
		mandatory="true"
		max-length="50"
		missing-error="error.message.required"
		range-error="error.message.50orless"
		type="string"
	/>
	<field
		formid="friendsemail"
		label="gift.certification.friends.email"
		mandatory="true"
		max-length="50"
		missing-error="error.message.required"
		range-error="error.message.50orless"
		type="string"
	/>
	<field
		formid="confirmfriendsemail"
		label="gift.certification.friends.confirm.email"
		mandatory="true"
		max-length="50"
		missing-error="error.message.required"
		range-error="error.message.50orless"
		type="string"
	/>
	<field
		formid="message"
		label="gift.certification.message"
		mandatory="true"
		max-length="50"
		missing-error="error.message.required"
		range-error="error.message.50orless"
		type="string"
	/>
	<field
		formid="amount"
		label="gift.certification.amount"
		mandatory="true"
		missing-error="error.message.required"
		parse-error="error.message.parse.phone.profile.form"
		type="string"
	/>
	<field
		formid="couponcode"
		label="gift.coupon.code.label"
		type="string"
		mandatory="true"
		binding="couponcode"
		max-length="50"
		missing-error="address.firstname.missing"
		range-error="error.message.50orless"
	/>
</form>